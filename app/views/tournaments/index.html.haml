%div
  = render 'form', new_tournament: @new_tournament

  %div.col-md-10
    %h3= t('.tournaments')
    %table.table
      %thead
        %tr
          %th= t('.name')
          %th= t('.status')
          %th= t('.winner')
          %th= t('.finalist')
          %th= t('.edit')
          %th= t('.show')

      %tbody
        - tournaments.each do |tournament|
          %tr
            %td= tournament.name
            %td= tournament.status
            %td= tournament.team_by_place(1)&.name
            %td= tournament.team_by_place(2)&.name
            %td= link_to t('.edit'), edit_tournament_path(tournament)
            %td= link_to t('.show'), tournament_path(tournament)
